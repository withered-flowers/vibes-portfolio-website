---
import SkillCard from './SkillCard.astro';

const skillCategories = [
  {
    title: "Frontend",
    skills: ["React", "TypeScript", "Next.js", "Tailwind CSS"]
  },
  {
    title: "Backend", 
    skills: ["Node.js", "Python", "PostgreSQL", "MongoDB"]
  },
  {
    title: "Tools & Cloud",
    skills: ["AWS", "Docker", "Git", "CI/CD"]
  }
];
---

<section class="w-full max-w-4xl">
  <h3 class="text-3xl font-semibold text-center mb-8 text-gray-900">Technologies & Skills</h3>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {skillCategories.map((category) => (
      <SkillCard title={category.title} skills={category.skills} />
    ))}
  </div>
</section>

<style>
  @media screen and (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
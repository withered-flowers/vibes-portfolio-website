---
import background from "../assets/background.svg";
import HeroSection from './HeroSection.astro';
import ExperienceSection from './ExperienceSection.astro';
import SkillsSection from './SkillsSection.astro';
import StatusIndicator from './StatusIndicator.astro';
---

<div class="font-sans min-h-screen text-gray-900">
  <img 
    src={background.src} 
    alt="" 
    fetchpriority="high" 
    class="fixed top-0 left-0 w-full h-full -z-10 blur-[80px] opacity-70"
  />
  <main class="min-h-screen flex flex-col justify-center items-center p-4 sm:p-8 gap-8 sm:gap-16">
    <HeroSection />
    <ExperienceSection />
    <SkillsSection />
  </main>
  <StatusIndicator />
</div>

<style>
  @media screen and (max-width: 768px) {
    main {
      gap: 2rem;
      padding: 1rem;
    }
    
    .flex-wrap .inline-flex {
      width: 100%;
      justify-content: center;
    }
    .flex.gap-4:has(.group) {
      flex-direction: column;
      width: 100%;
    }
  }
  
  @media screen and (max-width: 640px) {
    main {
      gap: 1.5rem;
      padding: 0.75rem;
    }
  }
</style>